<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <net.lyxnx.reginfo.view.RowHeader
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/rowHeader"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/line"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <net.lyxnx.reginfo.view.RowLine
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:id="@+id/line"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/rowHeader"
            app:layout_constraintEnd_toStartOf="@id/rowValue"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <net.lyxnx.reginfo.view.RowValue
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rowValue"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>