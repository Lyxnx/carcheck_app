<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/distance"
            style="@style/PlateBox"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:hint="@string/distance"
            android:inputType="numberDecimal"
            android:textSize="28sp"
            app:layout_constraintEnd_toStartOf="@id/distanceTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/mpg"
            style="@style/PlateBox"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:hint="@string/mpg"
            android:inputType="numberDecimal"
            android:textSize="28sp"
            app:layout_constraintEnd_toStartOf="@id/mpgTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/distance" />

        <TextView
            android:id="@+id/distanceTitle"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:gravity="center|start"
            android:text="@string/miles"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/distance"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mpgTitle"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:gravity="center|start"
            android:text="@string/mpg"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/mpg"
            app:layout_constraintTop_toBottomOf="@id/distanceTitle" />

        <TextView
            android:id="@+id/requiredFuel"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mpg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>