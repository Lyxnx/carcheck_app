<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.VehicleInfoActivity"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <EditText
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/reg"
            android:gravity="center"
            android:hint="@string/enter_reg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/infoTable"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="16dp"
            android:maxLength="7"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:fontFamily="@font/uknumberplate"
            android:textSize="50sp"
            android:background="@drawable/rounded_corners"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorSecondary"
            android:importantForAutofill="no"
            android:imeOptions="actionDone"/>

    <TableLayout
            android:gravity="center"
            android:id="@+id/infoTable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gallery" />

    <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/more"
            android:background="@drawable/information_outline"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toStartOf="@id/gallery"
            app:layout_constraintBottom_toBottomOf="parent" />

    <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/gallery"
            android:background="@drawable/gallery"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <include layout="@layout/progress_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>