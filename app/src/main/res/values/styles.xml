<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="RegularFont">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="PrimaryContent" parent="@style/RegularFont">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlateFont">
        <item name="android:fontFamily">@font/uknumberplate</item>
    </style>

    <style name="PlateHeader" parent="PlateFont">
        <item name="android:textSize">50sp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorSecondary</item>
        <item name="android:layout_marginHorizontal">50dp</item>
    </style>

    <style name="ToolbarTheme">
        <item name="toolbarStyle">@style/ToolbarTitleStyle</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColorPrimary">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:actionMenuTextColor">@color/colorSecondary</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/colorSecondary</item>
    </style>

    <style name="ToolbarTitleStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>