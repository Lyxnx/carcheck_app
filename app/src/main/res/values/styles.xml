<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CarCheck" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
    </style>

    <style name="RegularFont">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="PrimaryContent" parent="@style/RegularFont">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlateFont">
        <item name="android:fontFamily">@font/uknumberplate</item>
    </style>

    <style name="PlateHeader" parent="PlateFont">
        <item name="android:textSize">50sp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/primary_content</item>
        <item name="android:textColorHint">@color/primary_content</item>
        <item name="android:layout_marginHorizontal">50dp</item>
    </style>

    <style name="ToolbarTheme">
        <item name="toolbarStyle">@style/ToolbarTitleStyle</item>
        <item name="android:background">@color/primary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColorPrimary">@color/primary_content</item>
        <item name="android:textColor">@color/primary_content</item>
        <item name="android:actionMenuTextColor">@color/primary_content</item>
        <item name="colorControlNormal">@color/primary_content</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/primary_content</item>
    </style>

    <style name="ToolbarTitleStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="PlateBox" parent="@style/PlateFont">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:textColor">@color/primary_content</item>
        <item name="android:textColorHint">@color/primary_content</item>
    </style>

    <style name="FinanceTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="FinanceDisplay" parent="FinanceTitle">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="MiniTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/secondary_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>